<div class="max-device-width">
    <div class="slider">
        <div class="slides-container">
            {% for slide in page.header.slides %}
                <div class="slide">
                    {% if slide.text %}
                        <div class="slide-text">
                            {{ slide.text|markdown }}
                        </div>
                    {% endif %}
                    <figure>
                        <img src="{{ page.media[slide.image].url }}" alt="{{ slide.alt|default('Slide') }}"/>
                    </figure>
                </div>
            {% endfor %}
        </div>

        <!-- Navigation buttons -->
        <button class="slider-btn prev" aria-label="Previous slide">&#10094;</button>
        <button class="slider-btn next" aria-label="Next slide">&#10095;</button>
    </div>
</div>

<style>
    /* --- Slider Container --- */
    .slider {
        position: relative;
        overflow: hidden;
    }

    /*--- Slides Wrapper --- */
    .slides-container {
        display: flex;
        transition: transform 0.8s ease-in-out;
        width: 100%;
    }

    /* --- Each Slide --- */
    .slide {
        min-width: 100%;
        position: relative;
    }

    .slide figure {
        margin: 0;
    }

    .slide figure img {
        width: 100%;
        height: 70vh;
        object-fit: cover;
        display: block;
    }

    /* --- Slide Text Capsule --- */
    .slide-text {
        position: absolute;
        top: 50%;
        left: max(0px, calc((100vw - 976px) / 2));
        transform: translateY(-50%);
        background: var(--color-neutral-50);
        padding: 2.5rem 3rem;
        border-radius: 1.5rem;
        max-width: 40%;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }


    .slide-text h1 {
        margin: 0 0 0.5rem 0;
        color: #3a414e;
        font-size: 2rem;
        font-weight: 600;
        line-height: 1.2;
    }

    .slide-text p {
        margin: 0.5rem 0 0 0;
        color: #555;
        font-size: 1.1rem;
        font-weight: 400;
    }

    .slide-text a {
        display: inline-block;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .slide-text ul {
        list-style: none; /* Remove default bullets */
        padding: 0; /* Remove default padding */
        margin: 0; /* Remove default margin */
    }

    .slide-text li {
    }

    .slide-text li a {
        font-size: 1.125rem; /* ~18px, adjust as needed */
    }


    /* --- Navigation Buttons --- */
    .slider-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.7);
        border: none;
        color: #333;
        font-size: 2rem;
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        border-radius: 50%;
        transition: background 0.3s, transform 0.2s;
        z-index: 1;
        line-height: 1; /* prevents text from stretching vertically */
    }

    .slider-btn:hover {
        background: rgba(255, 255, 255, 1);
        transform: translateY(-50%) scale(1.1);
    }

    .slider-btn.prev {
        left: 1rem;
        padding-bottom: 5px;
        padding-right: 8px;
    }

    .slider-btn.next {
        right: 1rem;
        padding-bottom: 5px;
        padding-left: 8px;
    }

    @media (max-width: 768px) {
        .slide-text {
            left: 1rem;
            right: 1rem;
            max-width: none;
            width: calc(100% - 2rem);
            padding: 1.5rem 1.75rem;
            border-radius: 1rem;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

        .slider-btn {
            top: 90%;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slides = document.querySelectorAll('.slide');
        const container = document.querySelector('.slides-container');
        const nextBtn = document.querySelector('.slider-btn.next');
        const prevBtn = document.querySelector('.slider-btn.prev');
        let current = 0;

        function showSlide(index) {
            if (index < 0) index = slides.length - 1;
            if (index >= slides.length) index = 0;
            container.style.transform = `translateX(-${index * 100}%)`;
            current = index;
        }

        nextBtn.addEventListener('click', () => showSlide(current + 1));
        prevBtn.addEventListener('click', () => showSlide(current - 1));

        // Optional: Auto-slide every 8 seconds
        // setInterval(() => showSlide(current + 1), 8000);
    });
</script>
